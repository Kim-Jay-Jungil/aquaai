{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node@22.x" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css",  "use": "@vercel/static" },
    { "src": "*.js",   "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/index.html" }
  ]
}