{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "functions": {
    "api/**/*.js": { "runtime": "nodejs20.x" },
    "api/**/*.ts": { "runtime": "nodejs20.x" }
  },

  "rewrites": [
    { "source": "/",         "destination": "/index.html" },
    { "source": "/upload",   "destination": "/upload.html" },
    { "source": "/signin",   "destination": "/signin.html" }
  ]
}