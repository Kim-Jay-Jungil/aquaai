{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },

  "routes": [
    { "src": "^/api/.*", "dest": "/$0" },

    { "src": "^/signin$", "dest": "/signin.html" },
    { "src": "^/signup$", "dest": "/signup.html" },

    { "src": "^/upload$", "dest": "/upload/index.html" },

    { "src": "^/$", "dest": "/index.html" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ]
}